<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentRegisetActivity">

    <Button
        android:id="@+id/btn_login_student_register_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"/>

    <TextView
        android:id="@+id/tv_register_student_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生注册"
        android:textSize="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/btn_login_back"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学生姓名："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_studentno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学生学号："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_studentno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学院："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_college"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_sturegister_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_sturegister_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/rb_sturegister_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="女" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国籍："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_nation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line11"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_minzu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="民族："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_minzu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line13"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生地："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_teachtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育时间："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_teachtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sturegister_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_sturegister_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line17"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tv_sturegister_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注册"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line18"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40sp"/>

            </LinearLayout>



        </RelativeLayout>


    </ScrollView>



</LinearLayout>